<Window x:Class="ExamenationApplication.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenationApplication.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Height="50" Width="400" Grid.Row="0" x:Name="Login"/>
        <TextBox Height="50" Width="400" Grid.Row="1" x:Name="Password"/>
        <Button x:Name="AuthBtn" Click="AuthBtn_Click" Height="50" Width="300" Content="Войти" Grid.Row="2"/>
        <Button x:Name="RegBtn" Click="RegBtn_Click" Height="50" Width="300" Content="Зарегистрироваться" Grid.Row="3"/>
    </Grid>
</Window>
